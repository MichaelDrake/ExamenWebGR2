<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registro de Usuario</title>
    <link rel="stylesheet"
          href="/bootstrap/css/bootstrap.css">
</head>
<body>
<div class="container">


    <h1>Registrarse</h1>

    <p>Registrate</p>

    <form action="/Usuario/crear-usuario" method="post">
        <div>
            <% const existe20 = typeof error20 !== "undefined" ? true : false; %>
            <% const existe21 = typeof error21 !== "undefined" ? true : false; %>
            <% const existe22 = typeof error22 !== "undefined" ? true : false; %>
            <% const existe23 = typeof error23 !== "undefined" ? true : false; %>
            <% if(existe20){ %>
                <p style="color:#FF0000";>El campo <%= error20 %> no es valido</p>
            <% } %>
            <% if(existe21){ %>
                <p style="color:#FF0000";>El campo <%= error21 %> no es valido</p>
            <% } %>
            <% if(existe22){ %>
                <p style="color:#FF0000";>El campo  <%= error22 %> no es valido</p>
            <% } %>
            <% if(existe23){ %>
                <p style="color:#FF0000";>El campo <%= error23 %> no es valido)</p>
            <% } %>
            <label for="nombre">Usuario</label>
            <input id="nombre" type="text" name="nombre">


            <div>
                <div>
                    <label for="correo">Correo</label>
                    <input id="correo" type="text" name="correo">

                </div>
                <div>
                    <label for="fechaNacimiento">Fecha de Nacimiento</label>
                    <input id="fechaNacimiento" type="Date" name="fechaNacimiento">

                </div>
                <label for="password">Password</label>
                <input id="password" type="password" name="password">
            </div>
            <button type="submit" class="btn btn-light">Registrarse</button>
    </form>

    <br>
    <br>
    <br>
    <a href="/login"> YA TENGO UNA CUENTA

    </a>







    </div>

</body>
</html>







