<%- include('comunes/header',{titulo:'Gestion de Tiendas'})%>

<div class="container">

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container vertical">
                        <div class="row" style="padding-top: 75px;">

                            <div class="col-md-1">

                            </div>
                            <div class="col-sm-10">
                                <div>
                                    <% var creando = typeof venta === "undefined" ? true : false; %>

                                    <h1> <%= creando ? 'Crear' : 'Actualizar' %> Venta</h1>
                                    <form action="/Venta/<%= creando ? 'crear' : 'actualizar' %>-venta<%= creando ? '' : '/'+venta.id %>"
                                          method="POST">
                                        <div class="form-group">
                                            <label for="nombre">Nombre</label>
                                            <input class="form-control"
                                                   id="nombre"
                                                   value="<%= creando ? '' : venta.nombre %>"
                                                   name="nombre" type="text">
                                        </div>

                                        <div class="form-group">
                                            <label for="fecha">Fecha Apertura</label>
                                            <input class="form-control"
                                                   name="fecha"
                                                   id="fecha"
                                                   type="date"
                                            ><%= creando ? '' : venta.fecha %>
                                        </div>
                                        <div class="form-group">
                                            <label for="latitud">RUC</label>
                                            <input class="form-control"
                                                   type="number" step="0.01" name="latitud"
                                                   id="latitud"
                                            ><%= creando ? '' : venta.latitud %>
                                        </div>
                                        <div class="form-group">
                                            <label for="nombre">Matriz</label>
                                            <input class="form-control"
                                                   id="nombre"
                                                   value="<%= creando ? '' : venta.nombre %>"
                                                   name="nombre" type="text">
                                        </div>
                                        <button class="btn btn-danger" type="reset">Limpiar formulario</button>
                                        <button class="btn btn-success"><%= creando ? 'Crear' : 'Actualizar' %> Venta</button>
                                    </form>

                                    <!--<a href="/tienda/ventas">-->
                                        <!--<button class="btn btn-light">Regresar</button>-->
                                    <!--</a>-->
                                </div>
                            </div>
                            <div class="col-md-1">

                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>


    <h1>Gesti√≥n de Tiendas</h1>
    <p>Busque, cree, actualice y elimine Tiendas.
    <br>Busca tiendas por el nombre</p>


    <form action="/tienda/inicio" method="get">
        <div class="row">
            <div class="col-sm-9">
                <div class="form-group">
                    <label for="busqueda">Busqueda</label>
                    <input class="form-control" id="busquedaId" type="text" name="busqueda">
                </div>
            </div>
            <div class="col-sm-3">
                <button class="btn btn-outline-success btn-block espaciado-busqueda">Buscar</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-sm-9">
        </div>
        <div class="col-sm-3">
            <!--<a class="quitar-link" href="/tienda/crear-tienda">-->
                <button class="btn btn-outline-success btn-block " data-toggle="modal" data-target="#exampleModal">Registrar Tienda</button>
            <!--</a>-->
        </div>
    </div>

